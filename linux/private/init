#!/bin/bash

# my personal configuration

#export PATH
#unset USERNAME
#umask 002

PATH=~/private/emacs-24.5/bin:~/private/rtags/bin:~/private/gtags/bin:$(brew --prefix coreutils)/libexec/gnubin:/usr/local/bin/:$PATH

source ~/private/function

export HISTFILE=~/.sh_history
export HISTSIZE=100000
export HISTFILESIZE=100000

# addtional searche path for gtags tag file
# "gtags" should be executed at each directory in the GTAGSLIBPATH
export GTAGSLIBPATH=~/my_tag_files

# see most used commands in history, use $2 on csh instead of $3.
alias statis="history | awk '{print $3}' | sort | uniq -c | sort -rn | head"

# tell bash to understand emacs commands
set -o emacs

alias rm='rm -i'
alias mv='mv -i'
alias l='ls -hl'
alias la='l -a'
alias le='less'
alias tl='tail'
alias tf='tail -f'

# vim
alias v='vim'
alias vd='vimdiff'

# emacs
alias e='emq'
alias E='emacs'

# invoke ediff just like vimdiff
alias ed='ediff'

alias c='clear'
alias j='jobs'
alias g='grep --color=auto -n -E'
alias gi='grep --color=auto -n -E -i'
alias gr='grep --color=auto -n -E -R'
alias gv='grep --color=auto -n -E -v'

# using screen
alias sc='screen'
alias scr='screen -d -r'
